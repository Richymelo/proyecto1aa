<?xml version="1.0" encoding="UTF-8"?>
<!-- Versión simplificada y compatible de cuadros_magicos_interactivo.glade -->
<interface>
  <requires lib="gtk+" version="3.20"/>
  
  <object class="GtkWindow" id="main_window">
    <property name="can_focus">False</property>
    <property name="title">Cuadros Mágicos Interactivos</property>
    <property name="default_width">1000</property>
    <property name="default_height">700</property>
    
    <child>
      <object class="GtkBox" id="main_box">
        <property name="visible">True</property>
        <property name="can_focus">False</property>
        <property name="orientation">horizontal</property>
        <property name="spacing">20</property>
        <property name="margin_left">20</property>
        <property name="margin_right">20</property>
        <property name="margin_top">20</property>
        <property name="margin_bottom">20</property>
        
        <!-- Panel izquierdo: Controles -->
        <child>
          <object class="GtkBox" id="left_panel">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="orientation">vertical</property>
            <property name="spacing">15</property>
            <property name="width_request">350</property>
            
            <!-- Título -->
            <child>
              <object class="GtkLabel" id="title_label">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="label">Cuadros Mágicos - Modo Interactivo</property>
                <property name="justify">center</property>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="fill">True</property>
                <property name="position">0</property>
              </packing>
            </child>
            
            <!-- Frame de tamaño -->
            <child>
              <object class="GtkFrame" id="size_frame">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="label">Paso 1: Tamaño del Cuadro</property>
                <property name="shadow_type">in</property>
                
                <child>
                  <object class="GtkBox" id="size_box">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="orientation">vertical</property>
                    <property name="spacing">10</property>
                    <property name="margin_left">10</property>
                    <property name="margin_right">10</property>
                    <property name="margin_top">10</property>
                    <property name="margin_bottom">10</property>
                    
                    <child>
                      <object class="GtkLabel">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <property name="label">Selecciona un número impar (3-21):</property>
                        <property name="xalign">0</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkSpinButton" id="size_spin">
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="adjustment">
                          <object class="GtkAdjustment">
                            <property name="lower">3</property>
                            <property name="upper">21</property>
                            <property name="value">3</property>
                            <property name="step_increment">2</property>
                            <property name="page_increment">2</property>
                          </object>
                        </property>
                        <property name="numeric">True</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkButton" id="create_grid_button">
                        <property name="label">Crear Cuadro</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="receives_default">True</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="fill">True</property>
                <property name="position">1</property>
              </packing>
            </child>
            
            <!-- Frame de método -->
            <child>
              <object class="GtkFrame" id="method_frame">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="label">Paso 2: Método de Llenado</property>
                <property name="shadow_type">in</property>
                <property name="sensitive">False</property>
                
                <child>
                  <object class="GtkBox" id="method_box">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="orientation">vertical</property>
                    <property name="spacing">5</property>
                    <property name="margin_left">10</property>
                    <property name="margin_right">10</property>
                    <property name="margin_top">10</property>
                    <property name="margin_bottom">10</property>
                    
                    <child>
                      <object class="GtkRadioButton" id="siames_radio">
                        <property name="label">Método Siamés</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="receives_default">False</property>
                        <property name="active">True</property>
                        <property name="draw_indicator">True</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkRadioButton" id="louber_radio">
                        <property name="label">Método De la Loubère</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="receives_default">False</property>
                        <property name="draw_indicator">True</property>
                        <property name="group">siames_radio</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkRadioButton" id="l_radio">
                        <property name="label">Método en L</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="receives_default">False</property>
                        <property name="draw_indicator">True</property>
                        <property name="group">siames_radio</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkRadioButton" id="caracol_radio">
                        <property name="label">Método Caracol</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="receives_default">False</property>
                        <property name="draw_indicator">True</property>
                        <property name="group">siames_radio</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkButton" id="start_filling_button">
                        <property name="label">Iniciar Llenado</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="receives_default">True</property>
                        <property name="sensitive">False</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="fill">True</property>
                <property name="position">2</property>
              </packing>
            </child>
            
            <!-- Frame de llenado -->
            <child>
              <object class="GtkFrame" id="fill_frame">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="label">Paso 3: Llenado Interactivo</property>
                <property name="shadow_type">in</property>
                <property name="sensitive">False</property>
                
                <child>
                  <object class="GtkBox" id="fill_box">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="orientation">vertical</property>
                    <property name="spacing">10</property>
                    <property name="margin_left">10</property>
                    <property name="margin_right">10</property>
                    <property name="margin_top">10</property>
                    <property name="margin_bottom">10</property>
                    
                    <child>
                      <object class="GtkLabel" id="current_number_label">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <property name="label">Próximo número: 1</property>
                        <property name="justify">center</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkLabel" id="position_label">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <property name="label">Posición inicial: (?,?)</property>
                        <property name="justify">center</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkButton" id="next_step_button">
                        <property name="label">▶ Siguiente Paso</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="receives_default">True</property>
                        <property name="sensitive">False</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkButton" id="auto_complete_button">
                        <property name="label">⚡ Completar Automáticamente</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="receives_default">True</property>
                        <property name="sensitive">False</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkButton" id="reset_button">
                        <property name="label">🔄 Reiniciar</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="receives_default">True</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="fill">True</property>
                <property name="position">3</property>
              </packing>
            </child>
            
            <!-- Frame de estado -->
            <child>
              <object class="GtkFrame" id="status_frame">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="label">Estado</property>
                <property name="shadow_type">in</property>
                
                <child>
                  <object class="GtkBox" id="status_box">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="orientation">vertical</property>
                    <property name="spacing">5</property>
                    <property name="margin_left">10</property>
                    <property name="margin_right">10</property>
                    <property name="margin_top">10</property>
                    <property name="margin_bottom">10</property>
                    
                    <child>
                      <object class="GtkLabel" id="magic_sum_label">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <property name="label">Suma mágica objetivo: -</property>
                        <property name="xalign">0</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkLabel" id="progress_label">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <property name="label">Progreso: 0/0 números</property>
                        <property name="xalign">0</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
              <packing>
                <property name="expand">True</property>
                <property name="fill">True</property>
                <property name="position">4</property>
              </packing>
            </child>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">True</property>
            <property name="position">0</property>
          </packing>
        </child>
        
        <!-- Panel derecho: Cuadro y sumas -->
        <child>
          <object class="GtkBox" id="right_panel">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="orientation">vertical</property>
            <property name="spacing">10</property>
            
            <!-- Cuadro mágico -->
            <child>
              <object class="GtkScrolledWindow" id="grid_scroll">
                <property name="visible">True</property>
                <property name="can_focus">True</property>
                <property name="hscrollbar_policy">automatic</property>
                <property name="vscrollbar_policy">automatic</property>
                
                <child>
                  <object class="GtkGrid" id="magic_square_grid">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="row_spacing">2</property>
                    <property name="column_spacing">2</property>
                    <property name="row_homogeneous">True</property>
                    <property name="column_homogeneous">True</property>
                    <property name="halign">center</property>
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
              <packing>
                <property name="expand">True</property>
                <property name="fill">True</property>
                <property name="position">0</property>
              </packing>
            </child>
            
            <!-- Sumas parciales -->
            <child>
              <object class="GtkFrame" id="sums_frame">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="label">Sumas Parciales</property>
                <property name="shadow_type">in</property>
                <property name="height_request">200</property>
                
                <child>
                  <object class="GtkScrolledWindow" id="sums_scroll">
                    <property name="visible">True</property>
                    <property name="can_focus">True</property>
                    <property name="hscrollbar_policy">automatic</property>
                    <property name="vscrollbar_policy">automatic</property>
                    
                    <child>
                      <object class="GtkTextView" id="sums_textview">
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="editable">False</property>
                        <property name="cursor_visible">False</property>
                        <property name="left_margin">10</property>
                        <property name="right_margin">10</property>
                        <property name="top_margin">10</property>
                        <property name="bottom_margin">10</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="fill">True</property>
                <property name="position">1</property>
              </packing>
            </child>
          </object>
          <packing>
            <property name="expand">True</property>
            <property name="fill">True</property>
            <property name="position">1</property>
          </packing>
        </child>
      </object>
    </child>
  </object>
</interface>

