<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.20"/>
  
  <object class="GtkWindow" id="main_window">
    <property name="can_focus">False</property>
    <property name="title">Cuadros Mágicos Interactivos</property>
    <property name="default_width">1000</property>
    <property name="default_height">700</property>
    
    <child>
      <object class="GtkBox" id="main_box">
        <property name="visible">True</property>
        <property name="can_focus">False</property>
        <property name="orientation">horizontal</property>
        <property name="spacing">20</property>
        
        <child>
          <object class="GtkBox" id="left_panel">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="orientation">vertical</property>
            <property name="spacing">15</property>
            <property name="width_request">350</property>
            
            <child>
              <object class="GtkLabel" id="title_label">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="label">Cuadros Mágicos</property>
              </object>
            </child>
            
            <child>
              <object class="GtkFrame" id="size_frame">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="label">Tamaño del Cuadro</property>
                
                <child>
                  <object class="GtkBox" id="size_box">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="orientation">vertical</property>
                    <property name="spacing">10</property>
                    
                    <child>
                      <object class="GtkSpinButton" id="size_spin">
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="adjustment">
                          <object class="GtkAdjustment">
                            <property name="lower">3</property>
                            <property name="upper">21</property>
                            <property name="value">3</property>
                            <property name="step_increment">2</property>
                          </object>
                        </property>
                        <property name="numeric">True</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkButton" id="create_grid_button">
                        <property name="label">Crear Cuadro</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            
            <child>
              <object class="GtkFrame" id="method_frame">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="label">Método de Llenado</property>
                <property name="sensitive">False</property>
                
                <child>
                  <object class="GtkBox" id="method_box">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="orientation">vertical</property>
                    <property name="spacing">5</property>
                    
                    <child>
                      <object class="GtkRadioButton" id="siames_radio">
                        <property name="label">Método Siamés</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="active">True</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkRadioButton" id="louber_radio">
                        <property name="label">Método De la Loubère</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="group">siames_radio</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkRadioButton" id="l_radio">
                        <property name="label">Método en L</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="group">siames_radio</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkRadioButton" id="caracol_radio">
                        <property name="label">Método Caracol</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="group">siames_radio</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkButton" id="start_filling_button">
                        <property name="label">Iniciar Llenado</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="sensitive">False</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            
            <child>
              <object class="GtkFrame" id="fill_frame">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="label">Llenado Interactivo</property>
                <property name="sensitive">False</property>
                
                <child>
                  <object class="GtkBox" id="fill_box">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="orientation">vertical</property>
                    <property name="spacing">10</property>
                    
                    <child>
                      <object class="GtkLabel" id="current_number_label">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <property name="label">Próximo número: 1</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkLabel" id="position_label">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <property name="label">Posición inicial: (?,?)</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkButton" id="next_step_button">
                        <property name="label">Siguiente Paso</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="sensitive">False</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkButton" id="auto_complete_button">
                        <property name="label">Completar Automáticamente</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="sensitive">False</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkButton" id="reset_button">
                        <property name="label">Reiniciar</property>
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            
            <child>
              <object class="GtkFrame" id="status_frame">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="label">Estado</property>
                
                <child>
                  <object class="GtkBox" id="status_box">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="orientation">vertical</property>
                    <property name="spacing">5</property>
                    
                    <child>
                      <object class="GtkLabel" id="magic_sum_label">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <property name="label">Suma mágica objetivo: -</property>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkLabel" id="progress_label">
                        <property name="visible">True</property>
                        <property name="can_focus">False</property>
                        <property name="label">Progreso: 0/0 números</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        
        <child>
          <object class="GtkBox" id="right_panel">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="orientation">vertical</property>
            <property name="spacing">10</property>
            
            <child>
              <object class="GtkScrolledWindow" id="grid_scroll">
                <property name="visible">True</property>
                <property name="can_focus">True</property>
                
                <child>
                  <object class="GtkGrid" id="magic_square_grid">
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="row_spacing">2</property>
                    <property name="column_spacing">2</property>
                  </object>
                </child>
              </object>
            </child>
            
            <child>
              <object class="GtkFrame" id="sums_frame">
                <property name="visible">True</property>
                <property name="can_focus">False</property>
                <property name="label">Sumas Parciales</property>
                <property name="height_request">200</property>
                
                <child>
                  <object class="GtkScrolledWindow" id="sums_scroll">
                    <property name="visible">True</property>
                    <property name="can_focus">True</property>
                    
                    <child>
                      <object class="GtkTextView" id="sums_textview">
                        <property name="visible">True</property>
                        <property name="can_focus">True</property>
                        <property name="editable">False</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
